<div class="table">
    <table class="table table-striped table-sm">
        <thead>
        <tr>            
            <th>Name</th>
            <th>Description</th>
            <th>Total Duration</th>
        </tr>
        <body>
            {{#each .}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>{{totalDuration}}</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secundary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                View or Edit
                            </button>
                            <form class="dropdown-menu p-4">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="updatePlayName" placeholder="New Name">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="updatePlayDescription" placeholder="New Description">
                                </div>
                                <button type="button" class="btn btn-primary" name="button_view_playlist">View</button>
                                <button type="button" class="btn btn-primary" name="button_update_playlist">Save</button>
                            </form>
                        </div>
                    </td>
                    <!-- <td><a type="button" class="text-primary" name="button_artist" title="View Top Albums"><u>{{mbid}}</u></a></td>
                    <td>{{listeners}}</td>-->
                </tr>
            {{/each}}
        </body>
        </thead>
    </table>
</div>