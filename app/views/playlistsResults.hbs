<div class="table">
    <table class="table table-striped table-sm">
        <thead>
        <tr>            
            <th>Name</th>
            <th>Description</th>
            <th>Total Duration</th>
        </tr>
        <body>
            {{#each .}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>{{totalDuration}}</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secundary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                View and Edit
                            </button>
                            <form class="dropdown-menu p-4">
                            <div class="form-group">
                                <label for="exampleDropdownFormEmail2">Email address</label>
                                <input type="email" class="form-control" id="exampleDropdownFormEmail2" placeholder="email@example.com">
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword2">Password</label>
                                <input type="password" class="form-control" id="exampleDropdownFormPassword2" placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-primary">Sign in</button>
                            <button type="submit" class="btn btn-primary">View</button>
                            </form>
                        </div>
                    </td>
                    <!-- <td><a type="button" class="text-primary" name="button_artist" title="View Top Albums"><u>{{mbid}}</u></a></td>
                    <td>{{listeners}}</td>-->
                </tr>
            {{/each}}
        </body>
        </thead>
    </table>
</div>