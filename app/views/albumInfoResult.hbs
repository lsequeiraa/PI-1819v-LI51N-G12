<h4>{{name}} Album Info: <a type="button" class="text-primary" name="button_artist" title="View Top Albums"><u>{{artist}} Top Albums</u></a></h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>            
            <th>Name</th>
            <th>Duration</th>
        </tr>
        <body>
            {{#each this.tracks}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{duration}}</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secundary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Add To a Playlist
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                {{#if ../playlists.playlists}}
                                    {{#each ../playlists.playlists}}
                                        <button class="dropdown-item" name="button_track" trackName={{../name}} playlistID={{id}}>{{name}}</a>
                                    {{/each}}
                                {{else}}
                                    <p>No Playlists</p>
                                {{/if}}
                            </div>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </body>
        </thead>
    </table>
</div>