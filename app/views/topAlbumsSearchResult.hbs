<h4>{{artist}} Top Albums:</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>            
            <th>Name</th>
            <th>mbID</th>
            <th>Playcount</th>
        </tr>
        <body>
            {{#each this.albums}}
                <tr>
                    <td>{{name}}</td>
                    <td><a type="button" class="text-primary" name="button_album" title="View Album Info"><u>{{mbid}}</u></a></td>
                    <td>{{playcount}}</td>
                </tr>
            {{/each}}
        </body>
        </thead>
    </table>
</div>